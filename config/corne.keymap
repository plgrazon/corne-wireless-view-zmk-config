#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/mouse.h>

#define DEFAULT 0
#define LOWER   1
#define RAISE   2

/ {
  behaviors {
    hml: homewrow_mods_left {
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      flavor = "hold-preferred";
      label = "HOMEROW_MODS_LEFT_HAND";
      bindings = <&kp>, <&kp>;
      tapping-term-ms = <200>;
      hold-trigger-key-positions = <6 7 8 9 10 11 18 19 20 21 22 23 30 31 32 33 34 35 39 40 41>;
    };
    hmr: homewrow_mods_right {
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      flavor = "hold-preferred";
      label = "HOMEROW_MODS_RIGHT_HAND";
      bindings = <&kp>, <&kp>;
      tapping-term-ms = <200>;
      hold-trigger-key-positions = <0 1 2 3 4 5 12 13 14 15 16 17 24 25 26 27 28 29 36 37 38>;
    };
  };

        keymap {
                compatible = "zmk,keymap";

                default_layer {
// -----------------------------------------------------------------------------------------
// | ESC  |  Q  |  W  |  E  |  R  |  T  |   |  Y   |  U  |  I  |  O  |  P  | ENT   |
// | TAB  |  A  |  S  |  D  |  F  |  G  |   |  H   |  J  |  K  |  L  |  ;  | '     |
// | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N   |  M  |  ,  |  .  |  /  | SHIFT |
//                    | GUI | LWR | SPC |   | BKSP | RSE | GUI |
                        display-name = "Base";
                        bindings = <
   &kp ESC    &kp Q  &kp W         &kp E        &kp R        &kp T        &kp Y     &kp U        &kp I        &kp O         &kp P     &kp RET
   &kp TAB    &kp A  &hml LCTRL S  &hml LALT D  &hml LGUI F  &kp G        &kp H     &hmr RGUI J  &hmr RALT K  &hmr RCTRL L  &kp SEMI  &kp SQT
   &kp LSHFT  &kp Z  &kp X         &kp C        &kp V        &kp B        &kp N     &kp M        &kp COMMA    &kp DOT       &kp FSLH  &kp RSHFT
                                   &kp LGUI     &to 1        &kp SPACE    &kp BSPC  &to 2       &kp RGUI
                        >;
                };

                lower_layer {
// -----------------------------------------------------------------------------------------
// | ESC   |  1  |  2  |  3  |  4  |  5  |   |  6   |  7  |  8  |  9  |  0  | ENT  |
// | BTCLR | BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT  | DWN |  UP | RGT |     |      |
// | SHFT  |     |     |     |     |     |   |      |     |     |     |     |      |
//                     | GUI |     | SPC |   | BKSP |     | GUI |
                        display-name = "Lower";
                        bindings = <
   &kp ESC     &kp N1        &kp N2        &kp N3        &kp N4        &kp N5          &kp N6    &kp N7    &kp N8    &kp N9     &kp N0  &kp RET
   &bt BT_CLR  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4    &kp LEFT  &kp DOWN  &kp UP    &kp RIGHT  &trans  &trans
   &kp LSHFT   &trans        &trans        &trans        &trans        &trans          &trans    &trans    &trans    &trans     &trans  &trans
                          	               &kp LGUI      &trans        &kp SPACE       &kp BSPC  &trans    &kp RGUI
                        >;
                };

                raise_layer {
// -----------------------------------------------------------------------------------------
// | ESC  |  !  |  @  |  #  |  $  |  %  |   |  ^   |  &  |  *  |  (  |  )  | ENT  |
// | CTRL |     |     |     |     |     |   |  -   |  =  |  [  |  ]  |  \  |  `   |
// | SHFT |     |     |     |     |     |   |  _   |  +  |  {  |  }  | "|" |  ~   |
//                    | GUI |     | SPC |   | BKSP |     | GUI |
                        display-name = "Raise";
                        bindings = <
   &kp ESC    &kp EXCL  &kp AT  &kp HASH  &kp DLLR  &kp PRCNT    &kp CARET  &kp AMPS   &kp KP_MULTIPLY  &kp LPAR  &kp RPAR  &kp RET
   &kp LCTRL  &trans    &trans  &trans    &trans    &trans       &kp MINUS  &kp EQUAL  &kp LBKT         &kp RBKT  &kp BSLH  &kp GRAVE
   &kp LSHFT  &trans    &trans  &trans    &trans    &trans       &kp UNDER  &kp PLUS   &kp LBRC         &kp RBRC  &kp PIPE  &kp TILDE
                    	          &kp LGUI  &trans    &kp SPACE    &kp BSPC   &trans     &kp RGUI
                        >;
                };
        };
};
